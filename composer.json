{
    "name": "z44/hex2int",
    "description": "Application hex2int",
    "type": "project",
    "authors": [
        {
            "name": "Firza Aditiya"
        }
    ],
    "require": {
        "php": ">=8"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.20"
    },
    "autoload": {
        "psr-4": {
            "Z44\\Hex2int\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Z44\\Hex2int\\": "test"
        }
    },
    "scripts": {
        "test:all": "phpunit --configuration phpunit.xml --testsuite all",
        "test:view": "phpunit --configuration phpunit.xml --testsuite view",
        "test:homecontroller": "phpunit --configuration phpunit.xml --testsuite homecontroller",
        "test:hexconverter": "phpunit --configuration phpunit.xml --testsuite hexconverter",
        "test:convertcontroller": "phpunit --configuration phpunit.xml --testsuite convertcontroller"
    }
}
